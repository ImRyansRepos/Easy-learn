{
  "manifest_version": 3,
  "name": "YouTube → PDF Summary",
  "description": "Summarise the current YouTube video into a clean PDF using AI.",
  "version": "1.0.0",
  "permissions": ["tabs"],
  "host_permissions": [
    "https://www.youtube.com/*",
    "http://localhost:4000/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "YouTube → PDF Summary"
  }
}
